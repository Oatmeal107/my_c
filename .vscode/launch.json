{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/${fileBasenameNoExtension}.exe",
            "args": [],
            "stopAtEntry": false,//true等于在main处打断点
            "cwd": "${workspaceFolder}",// 调试程序时的工作目录，${workspaceFolder}为工作区文件夹； ${fileDirname}为文件所在目录
            "environment": [],
            "externalConsole": false,// 为true时使用单独的cmd窗口，与其它IDE一致；18年10月后设为false可调用VSC内置终端
            "MIMode": "gdb",
            "miDebuggerPath": "D:/Codes/MinGW/mingw64/bin/gdb.exe",
            "preLaunchTask": "g++",
            "setupCommands": [
                {// 模板自带，好像可以更好地显示STL容器的内容，具体作用自行Google
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}